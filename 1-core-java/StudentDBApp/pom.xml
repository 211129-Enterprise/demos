<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.revature</groupId>
  <artifactId>StudentDBApp</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <name>Student DB App</name>
  <description>Student Database Application</description>
  
  <properties>
  	<maven.compiler.source>1.8</maven.compiler.source>
	<maven.compiler.target>1.8</maven.compiler.target>
  </properties>
	
	<!--  Project Object Model -->
	<dependencies>
		 <!--  Posting in a Testing Framework dependencies (JUNIT) -->
		 <!-- https://mvnrepository.com/artifact/junit/junit -->
		 <dependency>
			 <groupId>junit</groupId>
			 <artifactId>junit</artifactId>
			 <version>4.12</version>
			 <scope>test</scope>
		 </dependency>	 
	</dependencies>
	
	<build>
		<plugins>
			<!-- Surefire plugin to print tests during build cycle -->
			<!--  This will allow Maven to print out all of your tests -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>3.0.0-M5</version>
				<dependencies>
					<dependency>
						<groupId>org.apache.maven.surefire</groupId>
						<artifactId>surefire-junit47</artifactId>
						<version>3.0.0-M5</version>
					</dependency>
				</dependencies>
			</plugin>
		</plugins>
	</build>
	<!-- To use, enter "mvn test" into the terminal / git bash -->
</project>